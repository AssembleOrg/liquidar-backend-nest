{
  "name": "liquidar-backend-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc --build && tsc-alias -p tsconfig.base.json",
    "build:all": "nest build gateway && nest build auth && nest build general && nest build notifications && nest build external",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start gateway",
    "start:dev": "nest start gateway --watch",
    "start:debug": "nest start gateway --debug --watch",
    "start:prod": "node dist/apps/gateway/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json",
    "dev:gateway": "nest start gateway --watch",
    "dev:auth": "nest start auth --watch",
    "dev:general": "nest start general --watch",
    "dev:notifications": "nest start notifications --watch",
    "dev:external": "nest start external --watch",
    "build:templates": "tsc -p libs/shared/templates/tsconfig.lib.json && pnpm run copy:templates",
    "copy:templates": "mkdir -p dist/libs/shared/templates/src && cp libs/shared/templates/src/*.hbs dist/libs/shared/templates/src/ || true",
    "start:gateway:prod": "node dist/apps/gateway/main.js",
    "start:auth:prod": "node dist/apps/auth/main.js",
    "start:general:prod": "node dist/apps/general/main.js",
    "start:notifications:prod": "node dist/apps/notifications/main.js",
    "start:external:prod": "node dist/apps/external/main.js",
    "railway:build": "pnpm run build && pnpm run build:templates",
    "railway:start": "node dist/apps/gateway/main.js"
  },
  "dependencies": {
    "@afipsdk/afip.js": "^1.1.3",
    "@getbrevo/brevo": "^2.5.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.0.1",
    "google-auth-library": "^10.1.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "mustache": "^4.2.0",
    "node-vault": "^0.10.5",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.14",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.4",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared/common(|/.*)$": "<rootDir>/libs/shared/common/src/$1",
      "^@app/shared/dto(|/.*)$": "<rootDir>/libs/shared/dto/src/$1",
      "^@app/shared/templates(|/.*)$": "<rootDir>/libs/shared/templates/src/$1"
    }
  }
}