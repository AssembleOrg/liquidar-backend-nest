{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/liquidar-backend-nest/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/liquidar-backend-nest/tsconfig.app.json",
    "webpack": true
  },
  "assets": [
    {
      "include": "libs/shared/templates/src/**/*.hbs",
      "outDir": "dist/libs/shared/templates",
      "watchAssets": true
    }
  ],
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "outputPath": "apps/auth/dist" 
      }
    },
    "external": {
      "type": "application",
      "root": "apps/external",
      "entryFile": "main",
      "sourceRoot": "apps/external/src",
      "compilerOptions": {
        "tsConfigPath": "apps/external/tsconfig.app.json",
        "outputPath": "apps/external/dist" 
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json",
        "outputPath": "apps/gateway/dist"
      }
    },
    "general": {
      "type": "application",
      "root": "apps/general",
      "entryFile": "main",
      "sourceRoot": "apps/general/src",
      "compilerOptions": {
        "tsConfigPath": "apps/general/tsconfig.app.json",
        "outputPath": "apps/general/dist" 
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json",
        "outputPath": "apps/notifications/dist" 
      }
    },
    "shared/common": {
      "type": "library",
      "root": "libs/shared/common",
      "entryFile": "index",
      "sourceRoot": "libs/shared/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/common/tsconfig.lib.json",
        "outputPath": "libs/shared/common/dist" 
      }
    },
    "shared/dto": {
      "type": "library",
      "root": "libs/shared/dto",
      "entryFile": "index",
      "sourceRoot": "libs/shared/dto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/dto/tsconfig.lib.json",
        "outputPath": "libs/shared/dto/dist" 
      }
    },
    "shared/templates": {
      "type": "library",
      "root": "libs/shared/templates",
      "entryFile": "index",
      "sourceRoot": "libs/shared/templates/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/templates/tsconfig.lib.json",
        "outputPath": "libs/shared/templates/dist" 
      }
    }
  }
}